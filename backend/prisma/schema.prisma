generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Int      @default(1)
  createdAt DateTime @default(now())
  
  fonts     Font[]

  @@map("users")
}

model Font {
  id        Int      @id @default(autoincrement())
  name      String 
  size      String
  style     String
  weight    String
  category  String
  createdAt DateTime @default(now())
  
  users     User[]

  @@map("fonts")
}
